{{#each uploads as |upload|}}

  <div data-id="{{upload._id}}">
    <div class="card">
      <img class="card-img-top" data-url="{{upload.url}}" src="{{upload.url}}" alt="Card image cap">

      <div class="card-body">

        <section data-id="{{upload._id}}">
          <h6 class="card-title" data-id="{{upload._id}}">{{upload.title}}</h6>
          <p class="card-createDate">created on: {{upload.createdAt}}</p>
          <p class="card-updateDate">updated on: {{upload.updatedAt}}</p>
          <p class="card-tag">tags: {{upload.tag}}</p>
          <hr class="p-2">
            <button type="click" class="btn btn-secondary" data-toggle="modal" data-target="#edit-upload-modal{{upload._id}}">Edit</button>

          <button class="delete btn btn-secondary">Delete</button>
        </section>
      </div>
      <div class="modal-hider">
      <div class="modal fade" id="edit-upload-modal{{upload._id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
<!-- edit-upload-modal-form -->
          <form class="modal-content edit-upload-modal-form">
            <div class="modal-header text-center">
              <h4 class="modal-title w-100 font-weight-bold">Edit Image Details</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body mx-3">
              <div class="md-form mb-5">
                <p class="fas fa-envelope prefix grey-text"></p>
                <!-- changed class to edit-upload-title -->
                <input type="title" class="edit-upload-title form-control validate" placeholder="{{upload.title}}" name="upload[title]" autocomplete="off"/>
                <label data-error="wrong" data-success="right" for="upload-title">Title</label>
              </div>
              <select name="upload[tag]">
                <option value="" disabled selected>Update Tag</option>
                <option value="Vacation">Vacation</option>
                <option value="Food">Food</option>
                <option value="Nature">Nature</option>
                <option value="Sports">Sports</option>
                <option value="Hobbies">Hobbies</option>
                <option value="Pets">Pets</option>
                <option value="Pop-Culture">Pop-Culture</option>
                <option value="Lifestyle">Lifestyle</option>
                <option value="Tech">Tech</option>
                <option value="Miscellaneous">Miscellaneous</option>
              </select>
            </div>
            <div class="modal-footer d-flex justify-content-center">
              <button class="btn btn-default" data-id="{{upload._id}}">Confirm</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    </div>
  </div>
{{/each}}
